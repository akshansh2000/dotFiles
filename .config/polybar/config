[colors]
background = #262626
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40


[bar/example]
monitor = ${env:MONITOR:}
width = 100%
height = 30
offset-y = 0%
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #263238

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = monospace:size=10:antialias=true;1

modules-left = battery cpu temp memory filesystem kernel
modules-center = i3
modules-right = wlan eth pulseaudio backlight-acpi date

tray-position = none 
tray-padding = 0

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer


[module/filesystem]
type = internal/fs
interval = 30

mount-0 = /

label-mounted = hdd: %free% free
label-mounted-foreground = #93a9f5
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = #e02f2f


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
pin-workspaces = true

label-focused = %name%
label-focused-padding = 1
label-focused-foreground = #ffffff

label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-foreground = #888888

label-visible = %name%
label-visible-padding = 1
label-visible-foreground = #ffffff

label-urgent = %name%
label-urgent-padding = 1
label-urgent-foreground = #edb26b


[module/xbacklight]
type = internal/xbacklight

format = <label>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}


[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

label = disp: %percentage%%
label-foreground = #c3e88d


[module/cpu]
type = internal/cpu
interval = 1

label = cpu: %percentage%%
label-foreground = #efb668


[module/memory]
type = internal/memory
interval = 1

label = ram: %percentage_used%%
label-foreground = #db9540


[module/wlan]
type = internal/network
interface = wlan0
interval = 1

format-connected = wifi: <label-connected>
label-connected = %essid%
format-connected-foreground = #84fa64

format-disconnected = wifi: disconnected
format-disconnected-foreground = #888888


[module/eth]
type = internal/network
interface = enp59s0
interval = 1

label-connected = eth: %local_ip%
label-connected-foreground = #7dc6f0

format-disconnected = eth: disconnected
format-disconnected-foreground = #888888


[module/date]
type = internal/date
interval = 1

date = %a, %b %d
time = %I:%M %p

label = %date% | %time%
label-foreground = #caa5e6


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = vol: %percentage%%
label-volume-foreground = #ff4f4f

label-muted = vol: muted
label-muted-foreground = #888888


[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 100

format-charging = charging: <label-charging>
format-charging-foreground = #f29dd6

format-discharging = discharging: <label-discharging>
format-discharging-foreground = #f29dd6

format-full = fully charged
format-full-foreground = #f29dd6


[module/temp]
type = custom/script
exec = ~/.custom_scripts/temperature.sh
interval = 1

label = %output%°C


[module/kernel]
type = custom/script
exec = uname -r
label = %output%
label-foreground = #ffbaba


[global/wm]
margin-top = 5
margin-bottom = 5
