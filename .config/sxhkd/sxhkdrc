# terminal
mod4+Return
  urxvt

# vol up
XF86AudioRaiseVolume
  pulseaudio-ctl up

# vol down
XF86AudioLowerVolume
  pulseaudio-ctl down

# vol mute
XF86AudioMute
  pulseaudio-ctl mute

# mic mute
XF86AudioMicMute
  pulseaudio-ctl mute-input

# spawn
mod4+d
  rofi -show run -no-custom

# spawn
mod4+shift+d
  rofi -show drun -no-custom

# file manager
mod4+shift+e
  thunar

# exit script
mod4+shift+q
  ~/.custom_scripts/exit.sh

# browser
mod4+b
  google-chrome-stable

# config files
mod4+c
  ~/.custom_scripts/config.sh

# brightness up
XF86MonBrightnessUp
  brightnessctl set +10%

# brightness down
XF86MonBrightnessDown
  brightnessctl set 10%-

# monitors
mod4+m
  .custom_scripts/monitors.sh

# clipboard
mod4+x
  rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# complete screenshot
Print
  scrot -q 100 -e 'mv $f ~/Pictures/Screenshots/'

# window screenshot
mod4+Print
  scrot -uq 100 -e 'mv $f ~/Pictures/Screenshots/'

# custom screenshot
mod4+shift+Print
  scrot -a $(slop -f '%x,%y,%w,%h') -q 100 -e 'mv $f ~/Pictures/Screenshots/'

# ranger
mod4+ctrl+e
  urxvt -e ranger

# emojis
mod4+z
  ~/.custom_scripts/emojis.sh

# dunst toggle
mod4+grave
  ~/.custom_scripts/dunst_toggle.sh
