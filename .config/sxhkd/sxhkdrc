# terminal
mod4+Return
  $TERMINAL

# vol up
XF86AudioRaiseVolume
  pulseaudio-ctl up 1 && ~/bin/refresh_bar
shift+XF86AudioRaiseVolume
  pulseaudio-ctl set 100 && ~/bin/refresh_bar

# vol down
XF86AudioLowerVolume
  pulseaudio-ctl down 1 && ~/bin/refresh_bar
shift+XF86AudioLowerVolume
  pulseaudio-ctl down 50 && ~/bin/refresh_bar

# vol mute
XF86AudioMute
  pulseaudio-ctl mute && ~/bin/refresh_bar

# mic mute
XF86Launch1
  pulseaudio-ctl mute-input && ~/bin/refresh_bar
shift+XF86AudioMute
  pulseaudio-ctl mute-input && ~/bin/refresh_bar

# spawn
# mod4+d
  # rofi -show run -no-custom

# spawn
# mod4+shift+d
  # rofi -show drun -no-custom

# file manager
mod4+shift+e
  thunar
mod4+ctrl+e
  $TERMINAL -e ranger

# exit script
mod4+shift+q
  ~/bin/exit

# browser
mod4+b
  qutebrowser
mod4+w
  qutebrowser --target=private-window

# config files
# mod4+c
  # ~/.custom_scripts/config.sh

# brightness up
XF86MonBrightnessUp
  brightnessctl set +5%
XF86KbdBrightnessUp
  brightnessctl -d asus::kbd_backlight set +1

# brightness down
XF86MonBrightnessDown
  brightnessctl set 5%-
XF86KbdBrightnessDown
  brightnessctl -d asus::kbd_backlight set 1-

# monitors
mod4+shift+m
  ~/bin/monitors

# clipboard
# mod4+x
  # rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# complete screenshot
Print
  scrot -q 100 -e 'mv $f ~/Pictures/Screenshots/'

# window screenshot
mod4+Print
  scrot -uq 100 -e 'mv $f ~/Pictures/Screenshots/'

# custom screenshot
ctrl+Print
  scrot -a $(slop -f '%x,%y,%w,%h') -q 100 -e 'mv $f ~/Pictures/Screenshots/'

