#!/usr/bin/env bash

choices="lock\nsuspend\nexit dwm\nshut down"

selected=`echo -e "$choices" | dmenu -i -p "session options"`

case $selected in
  lock)
    ~/.config/i3lock/.i3lockrc
    ;;
  suspend)
    ~/.config/i3lock/.i3lockrc &
    sleep 1
    systemctl suspend
    ;;
  "exit dwm")
    killall dwm
    ;;
  "shut down")
    shutdown now
    ;;
esac
