#!/usr/bin/env bash

long_url=`echo "" | dmenu -i -p "enter long url"`

link=`curl \
-H 'Authorization: Bearer '"$BITLY_TOKEN" \
-H 'Content-Type: application/json' \
-X POST \
-d '{
  "long_url": '"\"$long_url\""',
  "domain": "bit.ly",
  "group_guid": "Bjaja98Rwny"
}' \
https://api-ssl.bitly.com/v4/shorten -s | jq ".link"`

echo -n "$link" | sed 's/"//g' | xclip -i -selection clipboard
