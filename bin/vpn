#!/usr/bin/env bash

choices="uk\nus\ngermany\nnetherlands\nindia\ndisconnect"

selected=`echo -e "$choices" | dmenu -i -p "select nordvpn server"`

[[ $selected = "" ]] && exit
[[ $selected = "disconnect" ]] || nordvpn connect $selected
[[ $selected = "disconnect" ]] && nordvpn disconnect

refresh_bar
